<script type="text/javascript">
    $(function(){
        $("#Submit").click(function(e){
            e.preventDefault();
            let uid = $('#userId').val();
            let username = $('#playername').val();
            $.post({
                url:    'http://localhost:6500/playerDetail',
                dataType:   'JSON',
                data:   {
                    uid:    uid,
                    username:   username
                },
                success:function(data,status,response){
                    console.log(data);
                    let user = data.user;
                    let html = ''+
                    '<p >'+user.upliveCode +'</p>'+
                    '<p >'+user.userToken+'</p>'+
                    '<p >'+user.bill+'</p>'+
                    '<p >'+user.countryCode+'</p>'+
                    '<p >'+user.diamond+'</p>'+
                    '<p >'+user.expValue +'</p>'+
                    '<p >'+user.gender +'</p>'+
                    '<p >'+user.grade +'</p>'+
                    '<p >'+user.source +'</p>'+
                    '<p >'+user.status +'</p>'+
                    '<p >'+user.loginTime +'</p>';
                    $('#detail').html(html);
                }
            });
        });
    });
</script>

